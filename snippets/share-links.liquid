{% assign sEl = 'share-links' %}
<div class="{{ sEl }}">
  <ul class="{{ sEl }}__list">
    <li class="{{ sEl }}__list-item">
      <a class="icon icon-printer" onclick="window.print()">Print this page</a>
    </li>
    <li class="{{ sEl }}__list-item">
      <a class="icon icon-chain" href="{{ url }}">Copy Link</a>
    </li>
    <li class="{{ sEl }}__list-item">
      <a class="icon icon-fb" href="https://www.facebook.com/sharer/sharer.php?u={{ url }}" target="_blank">Share on Facebook</a>
    </li>
    <li class="{{ sEl }}__list-item">
      <a class="icon icon-tw" href="https://twitter.com/intent/tweet?text={{ title }}&url={{ url }}&via={{ shop.name }}" target="_blank">Share on Twitter</a>
    </li>
    <li class="{{ sEl }}__list-item">
      <a class="icon icon-pi" href="http://pinterest.com/pin/create/button/?url={{ url }}&description={{ title }}" target="_blank">Share on Pinterest</a>
    </li>
    <li class="{{ sEl }}__list-item">
      <a class="icon icon-email" href="mailto:?subject={{ title }}&body={{ url }}">Share via Email</a>
    </li>
  </ul>
  </div>
</div>
{%- assign title = null -%}
{%- assign url = null -%}
{{ sEl | append: '.css' | asset_url | stylesheet_tag }}
