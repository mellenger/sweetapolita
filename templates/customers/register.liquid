{%- capture c_attr -%}
  data-theme="blue-light"
{%- endcapture -%}
{% capture c_copy %}
  {% form 'create_customer' %}

    {{ form.errors | default_errors }}

    <div class="form-item">
      <label for="first_name">First Name</label>
      <input type="text" value="" name="customer[first_name]" size="30" />
    </div>

    <div class="form-item">
      <label for="last_name">Last Name</label>
      <input type="text" value="" name="customer[last_name]" size="30" />
    </div>

    <div class="form-item">
      <label for="email">Email Address</label>
      <input type="email" value="" name="customer[email]" size="30" />
    </div>

    <div class="form-item">
      <label for="password">Password</label>
      <input type="password" value="" name="customer[password]" size="30" />
    </div>

    <div class="form-item">
      <p>Already have a user account? <a href="/account/login" class="b b--caps">Login</a></p>
    </div>

    <input class="b b--block" type="submit" value="Create" />

  {% endform %}
{% endcapture %}

{% include 'card',
  c_attr: c_attr,
  c_display: 'page',
  c_modifier: 'form-max',
  c_header: 'Sign Up',
  c_header_el: 'h1',
  c_header_modifier: 'title-font color-blue-light center',
  c_copy: c_copy,
%}

